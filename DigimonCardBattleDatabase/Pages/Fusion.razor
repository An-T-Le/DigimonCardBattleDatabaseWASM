@page "/fusion/{CardId:int}"
@inject HttpClient Http
@using DigimonCardBattleDatabase.Components
@using DigimonCardBattleDatabase.Classes

<PageTitle>Fusion</PageTitle>
@if (data == null || CardId < 0)
{
    <p><em>Loading...</em></p>
}
else
{
  <div class="container" style="text-align:center;"> 
        
        <DigimonCardDataComponent CardData=CardData/>
        
    </div>
}